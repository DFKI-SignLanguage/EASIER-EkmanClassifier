{
    "name": "Resnet50",
    "n_gpu": 1,

    "arch": {
        "type": "ResnetModel",
        "args": {}
    },
    "data_loader": {
        "type": "FaceExpressionPhoenixDataLoader",
        "args":{
            "data_dir": "/ds/images/FaceExpressionPhoenix",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "micro_precision", "micro_recall", "multilabel_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
