{
  "name": "Resnet50",
  "n_gpu": 1,
  "arch": {
    "type": "ResnetModel",
    "args": {}
  },
  "data_loader": {
    "type": "FaceExpressionPhoenixDataLoader",
    "args": {
      "data_dir": "/ds/images/FaceExpressionPhoenix",
      "batch_size": 64,
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 2,
      "training": true
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "cross_entropy_loss",
  "metrics": [
    "accuracy",
    "top_k_acc",
    "accuracy_per_class",
    "sensitivity_per_class",
    "specificity_per_class"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 30,
    "save_dir": "/netscratch/bhuvaneshwara/saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  },
    "evaluation_store": {
    "type": "Evaluator",
    "args": {
      "save_dir": "/netscratch/bhuvaneshwara/saved/",
      "training": true
    },
    "metrics": [
      "accuracy",
      "balanced_accuracy",
      "sensitivity_per_class"
    ]
  }
}
