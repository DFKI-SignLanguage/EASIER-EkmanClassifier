{
  "name": "Resnet50",
  "n_gpu": 1,
  "arch": {
    "type": "ResnetModel",
    "args": {}
  },
  "data_loader": {
    "type": "AffectNetDataLoader",
    "args": {
      "data_dir": "/gpu-data3/filby/AffectNet-8Labels",
      "batch_size": 64,
      "shuffle": true,
      "num_workers": 4
    }
  },
  "optimizer": {
    "type": "Adam",
    "args":{
        "lr": 1e-4
    }
  },
  "loss": "cross_entropy_loss",
  "metrics": [
    "accuracy",
    "top_k_acc",
    "accuracy_per_class",
    "sensitivity_per_class",
    "specificity_per_class"
  ],
  "lr_scheduler": {
      "type": "MultiStepLR",
      "args": {
          "verbose": true,
          "milestones": [20,30]
      }
  },
  "trainer": {
    "epochs": 1,
    "save_dir": "logs/affectnet",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  },
    "evaluation_store": {
    "type": "Evaluator",
    "args": {
      "save_dir": "logs/affectnet",
      "training": true
    },
    "metrics": [
      "accuracy",
      "balanced_accuracy",
      "sensitivity_per_class"
    ]
  }
}
